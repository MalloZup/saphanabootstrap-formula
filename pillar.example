hana:
  # optional: Install required packages to install SAP HANA (true by default)
  # If set to false, this packages must be installed before the formula
  # execution manually
  # install_packages: true
  nodes:
    - host: 'hana01'
      sid: 'prd'
      instance: 00
      password: 'Qwerty1234'
      install:
        software_path: '/root/sap_inst/51052481'
        root_user: 'root'
        root_password: 's'
        system_user_password: 'Qwerty1234'
        sapadm_password: 'Qwerty1234'
      primary:
        name: NUREMBERG
        backup:
          # Set key or key_user/key_password combination
          key: 'backupkey'
          # Or
          key_user: 'SYSTEM'
          key_password: 'Qwerty1234'
          database: 'SYSTEMDB'
          file: 'backup'
        userkey:
          key: 'backupkey'
          environment: 'hana01:30013'
          key_user: 'SYSTEM'
          key_password: 'Qwerty1234'
          database: 'SYSTEMDB'

    - host: 'hana02'
      sid: 'prd'
      instance: 00
      password: 'Qwerty1234'
      install:
        software_path: '/root/sap_inst/51052481'
        root_user: 'root'
        root_password: 's'
        system_user_password: 'Qwerty1234'
        sapadm_password: 'Qwerty1234'
      secondary:
        name: PRAGUE
        remote_host: 'hana01'
        remote_instance: '00'
        replication_mode: 'sync'
        operation_mode: 'logreplay'

    - host: hana02
      sid: 'qas'
      instance: 01
      password: 'Qwerty1234'
      install:
        software_path: '/root/sap_inst/51052481'
        root_user: 'root'
        root_password: 's'
        system_user_password: 'Qwerty1234'
        sapadm_password: 'Qwerty1234'
